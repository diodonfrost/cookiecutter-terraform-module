{
  "build": { "dockerfile": "Dockerfile", "context": "../" },
  "mounts": [
    {%- if cookiecutter.terraform_provider == "aws" %}
    "source=${localEnv:HOME}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached"
    {%- elif cookiecutter.terraform_provider == "azurerm" %}
    "source=${localEnv:HOME}/.azure,target=/home/vscode/.azure,type=bind,consistency=cached"
    {%- endif %}
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "redhat.vscode-yaml",
        "vscode-icons-team.vscode-icons",
        "isudox.vscode-jetbrains-keybindings",
        "GitHub.vscode-github-actions"
      ],
      "settings": {
        // Fonts MesLGS NF should be install: https://github.com/romkatv/powerlevel10k-media/blob/master/MesloLGS%20NF%20Regular.ttf
        "terminal.integrated.fontFamily": "MesloLGS NF",
        "redhat.telemetry.enabled": false,
        "aws.telemetry": false,
        "workbench.iconTheme": "vscode-icons",
        "vsicons.dontShowNewVersionMessage": true
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {
      "installSentinel": true,
      "installTFsec": true,
      "installTerraformDocs": true
    },
    {%- if cookiecutter.terraform_provider == "aws" %}
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    {%- elif cookiecutter.terraform_provider == "azurerm" %}
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    {%- endif %}
    "ghcr.io/devcontainers/features/go:1": {}
  },
  "postStartCommand": "cd tests/terratest && go get ./...",
  "remoteEnv": { "PATH": "${containerEnv:PATH}:/home/vscode/.local/bin" },
  "remoteUser": "vscode"
}
